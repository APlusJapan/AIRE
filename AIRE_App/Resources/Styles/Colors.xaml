<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Universal Color -->
    <Color x:Key="LineColor">#22BA4F</Color>

    <!-- Light Color -->
    <Color x:Key="BorderLightColor">#CAC4D0</Color>
    <Color x:Key="PrimaryLightColor">#7633DA</Color>
    <Color x:Key="PrimaryTextLightColor">#303030</Color>
    <Color x:Key="SecondaryTextLightColor">#606060</Color>
    <Color x:Key="PlaceholderTextLightColor">#AAAAAA</Color>
    <Color x:Key="PrimaryBackgroundLightColor">#EEEEEE</Color>
    <Color x:Key="SecondaryBackgroundLightColor">#DDDDDD</Color>
    <Color x:Key="TertiaryBackgroundLightColor">#CCCCCC</Color>
    <Color x:Key="UserMessageBackgroundLightColor">#F7EDFF</Color>
    <Color x:Key="AssistantMessageBackgroundLightColor">#FCF8FA</Color>

    <!-- Dark Color -->
    <Color x:Key="BorderDarkColor">#49454F</Color>
    <Color x:Key="PrimaryDarkColor">#8D4CF5</Color>
    <Color x:Key="PrimaryTextDarkColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextDarkColor">#909090</Color>
    <Color x:Key="PlaceholderTextDarkColor">#888888</Color>
    <Color x:Key="PrimaryBackgroundDarkColor">#111111</Color>
    <Color x:Key="SecondaryBackgroundDarkColor">#222222</Color>
    <Color x:Key="TertiaryBackgroundDarkColor">#333333</Color>
    <Color x:Key="UserMessageBackgroundDarkColor">#35303C</Color>
    <Color x:Key="AssistantMessageBackgroundDarkColor">#313032</Color>

</ResourceDictionary>