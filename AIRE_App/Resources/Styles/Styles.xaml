<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
    xmlns:textInputLayout="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit">

    <!--  Common style for profile border style  -->
    <Style x:Key="ProfileBorderStyle" TargetType="Border">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="White" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20,20,20,20" />
    </Style>

    <!--  Common style for entry borders  -->
    <Style x:Key="ThemeBorderStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="#FFFFFF" />
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <Style x:Key="BorderlessEditorStyle" TargetType="Editor">
        <Setter Property="TextColor" Value="#333333" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource PlaceholderTextLightColor}, Dark={StaticResource PlaceholderTextDarkColor}}" />
    </Style>

    <!--  Common style for Icon buttons  -->
    <Style x:Key="IconButtonStyle" TargetType="buttons:SfButton">
        <Setter Property="TextColor" Value="Gray" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
    </Style>

    <Style x:Key="InputLayoutStyle" TargetType="textInputLayout:SfTextInputLayout">
        <Setter Property="LeadingViewPosition" Value="Outside"/>
        <Setter Property="HintLabelStyle">
            <textInputLayout:LabelStyle FontSize="16"/>
        </Setter>
    </Style>

    <Style x:Key="FormsButtonStyle" TargetType="buttons:SfButton">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PrimaryLightColor}, Dark={StaticResource PrimaryDarkColor}}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="LineButtonStyle" TargetType="buttons:SfButton">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PrimaryLightColor}, Dark={StaticResource PrimaryDarkColor}}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
    </Style>

    <Style x:Key="GotoButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PrimaryLightColor}, Dark={StaticResource PrimaryDarkColor}}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
    </Style>

</ResourceDictionary>
