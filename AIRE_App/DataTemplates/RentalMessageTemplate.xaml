<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:AIRE_App.ViewModels"
             x:DataType="{x:Type ViewModels:MessageViewModel}"
             x:Class="AIRE_App.DataTemplates.RentalMessageTemplate"
             Padding="10">

    <Border
        Padding="0"
        BackgroundColor="{AppThemeBinding Light={StaticResource AssistantMessageBackgroundLightColor}, Dark={StaticResource AssistantMessageBackgroundDarkColor}}"
        StrokeThickness="0"
        StrokeShape="RoundRectangle 4"
        HorizontalOptions="Start">

        <Grid Margin="8" RowSpacing="8" ColumnSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="96"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="{Binding Manmei}" FontSize="16" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan ="2"/>
            <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,Auto" RowSpacing="16">
                <Image Source="{Binding ImageUrl}" Grid.Row="0" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBackgroundLightColor}, Dark={StaticResource PrimaryBackgroundDarkColor}}"/>
                <Button Grid.Row="1" Text="&#xe706;" FontFamily="MauiMaterialAssets" Clicked="OnClicked_Details" CommandParameter="{Binding .}" Style="{StaticResource GotoButtonStyle}"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="4">
                <HorizontalStackLayout Grid.Row="0">
                    <Label Text="{Binding YachinInfo}"/>
                    <Label Text="{Binding KanrihiInfo}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Row="1">
                    <Label Text="{Binding ShikikinInfo}"/>
                    <Label Text="/"/>
                    <Label Text="{Binding ReikinInfo}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Row="2">
                    <Label Text="{Binding MadoriInfo}"/>
                    <Label Text="/"/>
                    <Label Text="{Binding TatemenInfo}"/>
                    <Label Text="/"/>
                    <Label Text="{Binding SyokaiInfo}"/>
                </HorizontalStackLayout>
                <Label Grid.Row="3" Text="{Binding StationInfo}"/>
                <HorizontalStackLayout Grid.Row="4">
                    <Label Text="{Binding ChikuInfo}"/>
                    <Label Text="/"/>
                    <Label Text="{Binding KaisouInfo}"/>
                </HorizontalStackLayout>
                <Label Grid.Row="5" Text="{Binding ChimeiInfo}"/>
            </Grid>
        </Grid>

    </Border>

</ContentView>
