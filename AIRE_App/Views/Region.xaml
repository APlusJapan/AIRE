<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Enmus="clr-namespace:AIRE_App.Data"
             x:Class="AIRE_App.Views.RegionView">
    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/> 
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ImageButton Source="hokkaido.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Hokkaido}"
                     Grid.Row="0" Grid.RowSpan ="2" Grid.Column="8" Grid.ColumnSpan ="3"/>
        <ImageButton Source="tohoku.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Tohoku}"
                     Grid.Row="2" Grid.RowSpan ="3" Grid.Column="8" Grid.ColumnSpan ="2"/>
        <ImageButton Source="kanto.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Kanto}"
                     Grid.Row="5" Grid.RowSpan ="2" Grid.Column="8" Grid.ColumnSpan ="2"/>
        <ImageButton Source="koshinetsu.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Koshinetsu}"
                     Grid.Row="4" Grid.RowSpan ="2" Grid.Column="5" Grid.ColumnSpan ="3"/>
        <ImageButton Source="tokai.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Tokai}"
                     Grid.Row="6" Grid.RowSpan ="2" Grid.Column="6" Grid.ColumnSpan ="2"/>
        <ImageButton Source="kansai.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Kansai}"
                     Grid.Row="6" Grid.RowSpan ="2" Grid.Column="4" Grid.ColumnSpan ="2"/>
        <ImageButton Source="chugoku.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Chugoku}"
                     Grid.Row="6" Grid.RowSpan ="1" Grid.Column="2" Grid.ColumnSpan ="2"/>
        <ImageButton Source="shikoku.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Shikoku}"
                     Grid.Row="7" Grid.RowSpan ="1" Grid.Column="2" Grid.ColumnSpan ="2"/>
        <ImageButton Source="kyushu.png"
                     Clicked="OnClicked_Prefecture"
                     CommandParameter="{x:Static Enmus:RegionType.Kyushu}"
                     Grid.Row="6" Grid.RowSpan ="2" Grid.Column="0" Grid.ColumnSpan ="2"/>
    </Grid>
</ContentPage>
