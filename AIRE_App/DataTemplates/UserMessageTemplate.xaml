<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:AIRE_App.ViewModels"
             x:DataType="{x:Type ViewModels:MessageViewModel}"
             x:Class="AIRE_App.DataTemplates.UserMessageTemplate"
             Padding="10">

    <Border
        Padding="0"
        BackgroundColor="{AppThemeBinding Light={StaticResource UserMessageBackgroundLightColor}, Dark={StaticResource UserMessageBackgroundDarkColor}}"
        StrokeThickness="0"
        StrokeShape="RoundRectangle 4"
        HorizontalOptions="End">

        <StackLayout
            Margin="8"
            VerticalOptions="Fill">

            <Label
                FontSize="14"
                HorizontalOptions="End"
                LineHeight="1.25"
                Text="{Binding Text}"
                TextColor="{AppThemeBinding Light={StaticResource PrimaryTextLightColor}, Dark={StaticResource PrimaryTextDarkColor}}"
                VerticalOptions="Center"/>

            <!--
            <Label
                FontSize="11"
                HorizontalOptions="End"
                LineHeight="1.25"
                Text="{Binding Role}"
                TextColor="{AppThemeBinding Light={StaticResource SecondaryTextLightColor}, Dark={StaticResource SecondaryTextDarkColor}}"
                VerticalOptions="Center"/>
            -->

        </StackLayout>

    </Border>

</ContentView>
